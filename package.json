{
  "name": "scan-engine-lab",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:engine && npm run build:engine-dom && npm run build:react && tsc && vite build",
    "build:component": "npm run build:engine && npm run build:engine-dom && npm run build:react && vite build --config vite.book.config.ts",
    "build:book": "npm run build:component && cd book && ASTRO_BASE=/garyd-scanner-demo/book/ ASTRO_TELEMETRY_DISABLED=1 npm run build",
    "build:gh": "npm run build && npm run build:book && rm -rf dist/book && mkdir -p dist/book && cp -R book/dist/* dist/book/",
    "build:engine": "npm --prefix packages/switch-scanner-engine run build",
    "build:engine-dom": "npm --prefix packages/scan-engine-dom run build",
    "build:react": "npm --prefix packages/react-scan-engine run build",
    "publish:engine": "npm --prefix packages/switch-scanner-engine publish --access public",
    "release:prepare": "node ./scripts/release.mjs prepare",
    "release:publish": "node ./scripts/release.mjs publish",
    "release:full": "node ./scripts/release.mjs full",
    "preview": "vite preview",
    "test:engine": "npm --prefix packages/switch-scanner-engine run test",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.14",
    "@vitest/ui": "^4.0.18",
    "happy-dom": "^20.4.0",
    "jsdom": "^27.4.0",
    "react": "^19.2.4",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@willwade/ppmpredictor": "^0.0.12",
    "aac-board-viewer": "^0.2.8",
    "scan-engine": "file:./packages/switch-scanner-engine",
    "scan-engine-dom": "file:./packages/scan-engine-dom",
    "worldalphabets": "^0.0.33"
  }
}
