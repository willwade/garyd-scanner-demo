{
  "name": "garyd-scanner-demo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:component": "vite build --config vite.book.config.ts",
    "build:book": "npm run build:component && cd book && ASTRO_BASE=/garyd-scanner-demo/book/ ASTRO_TELEMETRY_DISABLED=1 npm run build",
    "build:gh": "npm run build && npm run build:book && rm -rf dist/book && mkdir -p dist/book && cp -R book/dist/* dist/book/",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/ui": "^4.0.18",
    "happy-dom": "^20.4.0",
    "jsdom": "^27.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@willwade/ppmpredictor": "^0.0.12",
    "aac-board-viewer": "^0.2.8",
    "worldalphabets": "^0.0.33"
  }
}
