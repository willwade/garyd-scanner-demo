{
  "name": "garyd-scanner-demo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run fix-book-paths",
    "fix-book-paths": "node -e \"const fs=require('fs');const idx=fs.readdirSync('dist/assets').find(f=>f.startsWith('index-')&&f.endsWith('.js'));const css=fs.readdirSync('dist/assets').find(f=>f.startsWith('index-')&&f.endsWith('.css'));let html=fs.readFileSync('book.html','utf8');html=html.replace('/src/main.ts','./assets/'+idx).replace(/<\\/script>/,'</script>\\n    <link rel=\\\"stylesheet\\\" crossorigin href=\\\"./assets/'+css+'\\\">');fs.writeFileSync('dist/book.html',html);\"",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/ui": "^4.0.18",
    "happy-dom": "^20.4.0",
    "jsdom": "^27.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@willwade/ppmpredictor": "^0.0.12",
    "worldalphabets": "^0.0.33"
  }
}
